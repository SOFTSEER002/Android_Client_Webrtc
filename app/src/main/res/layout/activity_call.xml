<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:weightSum="2">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Stats"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#000" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/stats"
                    android:layout_marginTop="1dp"
                    android:background="#DBDBDB" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="5dp">

                        <TextView
                            android:id="@+id/batTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/stats"
                            android:layout_marginTop="2dp"
                            android:text="Battery Temperature "
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000" />

                        <TextView

                            android:id="@+id/batlvl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/batTemp"
                            android:layout_marginTop="2dp"
                            android:text="Battery Level "
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/networksignal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="LTE Signal"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000" />


                        <TextView
                            android:id="@+id/wifisignal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/batlvl"
                            android:layout_marginTop="2dp"
                            android:text="Wifi Signal"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:id="@+id/batTempsocket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/stats"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="2dp"
                            android:text="-"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/batlvlsocket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="-"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/networksignalsocket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="-"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/wifisignalsocket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="-"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header">

            <com.myhexaville.androidwebrtc.app_rtc_sample.view.PercentFrameLayout
                android:id="@+id/remote_video_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.webrtc.SurfaceViewRenderer
                    android:id="@+id/remote_video_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.myhexaville.androidwebrtc.app_rtc_sample.view.PercentFrameLayout>

            <com.myhexaville.androidwebrtc.app_rtc_sample.view.PercentFrameLayout
                android:id="@+id/local_video_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.webrtc.SurfaceViewRenderer
                    android:id="@+id/local_video_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />
            </com.myhexaville.androidwebrtc.app_rtc_sample.view.PercentFrameLayout>

            <FrameLayout
                android:id="@+id/call_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/contact_name_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/buttons_call_container"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:id="@+id/buttons_call_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_above="@+id/capture_format_text_call"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="32dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/button_call_disconnect"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/disconnect"
                            android:contentDescription="@string/disconnect_call" />

                        <ImageButton
                            android:id="@+id/button_call_switch_camera"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:background="@android:drawable/ic_menu_camera"
                            android:contentDescription="@string/switch_camera"
                            android:visibility="gone" />

                        <ImageButton
                            android:id="@+id/button_call_toggle_mic"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:background="@android:drawable/ic_btn_speak_now"
                            android:contentDescription="@string/toggle_mic"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/capture_format_text_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/capture_format_slider_call"
                        android:layout_centerHorizontal="true"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/capture_format_slider_call"
                        android:layout_centerHorizontal="true"
                        android:textColor="#B91C1C"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/capture_format_slider_call"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:progress="50" />
                </RelativeLayout>
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>

</layout>